		<div id="j-col-right">
			<div id="coming-soon">
				<p class="title-grey">KnowCred</p>
				<%= image_tag('avatar-gen-person-icon.png', alt: 'avatar-gen-person-icon.png', class: 'avatar-img-1') %>
				<p style="padding:20px 75px; font-size: 18px;">Earn your credentials, display them, and get them validated.</p>
			</div>
		</div>
		<% end %>
		
		<div style="clear:both; height:5px; margin-bottom:35px;"></div>
		<h1 class="j-coming-soon">KnowCred is coming soon</h1>
		<div id="knowcred-box">
			<div id="kc-top">
				<div class="kc-box">
					<%= image_tag('knowcred/kc-a.jpg', alt: 'kc-a.jpg') %>
				</div>
				<div class="kc-box">
					<%= image_tag('knowcred/kc-ribbon.jpg', alt: 'kc-ribbon.jpg') %>
				</div>
				<div class="kc-box">
					<%= image_tag('knowcred/kc-a.jpg', alt: 'kc-a.jpg') %>
				</div>
			</div>
			<div style="clear:both;"></div>
			<h1 style="font-size:28px; color:#49853f; margin-top:35px;">Add a Cred:</h1>

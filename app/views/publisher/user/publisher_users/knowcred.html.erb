<% provide(:title, 'KnowCred') %>

	
	<style>

		.knowcred {
			width: 1125px;
			margin: 0 auto;
		}	
		.knowcred #top-bar .logo {
		    max-width: 250px;
		}
		.knowcred .j-coming-soon {font-size:32px; text-align: center; color:#333; opacity:.45; margin-top:5px;}
		.knowcred #coming-soon {margin-top: 25px; min-height:200px; border:2px solid #999; opacity: .45;}
	 	.knowcred .title-grey {
	 		padding:5px;
			border-bottom:1px solid #ccc;
			background: -moz-linear-gradient(top,  #CCC 35%, #ffffff 95%);
			background: -webkit-gradient(linear, left top, left bottom, color-stop(35%,#CCC), color-stop(95%,#ffffff));
			background: -webkit-linear-gradient(top,  #CCC 35%,#ffffff 95%);
			background: -o-linear-gradient(top,  #CCC 35%,#ffffff 95%);
			background: -ms-linear-gradient(top,  #CCC 35%,#ffffff 95%);
			background: linear-gradient(to bottom,  #CCC 35%,#ffffff 95%);
			filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#CCC', endColorstr='#ffffff',GradientType=0 );
		}
		.knowcred .title-grey span {color:#333; float:right;}
		.knowcred #j-col-left {width:550px; float:left; margin-left: 34px;}
		.knowcred #j-col-right {width:550px; float:right;}
		.knowcred .ex-box {width:250px; border:1px solid #333; height:150px; float:left; margin:11px;}.ex-box h2 {font-size:24px; text-align: center;}
		.knowcred .knowcred-icon {opacity: .45; margin:35px 0 0 125px;}
	
		.knowcred #knowcred-box {opacity:.45;}
		.knowcred #kc-top { width: 1125px; margin:0 auto;}
		.knowcred .kc-box {height:250px; width:300px; border:1px solid #333; margin:10px 35px; float:left;}
		.knowcred .kc-box img {width: 240px; margin:15px 0 0 30px;}
		.knowcred #add-cred {border-top:2px solid #333; border-bottom: 2px solid #333; }
		.knowcred .add-box {height:150px; width:300px; border:1px solid #333; margin:10px 35px; float:left;}
		.knowcred .val {border:1px solid #000;
			-moz-box-shadow: 0 0 5px 5px #49853f;
		-webkit-box-shadow: 0 0 5px 5px #49853f;
		box-shadow: 0 0 5px 5px #49853f;
		} 
		.knowcred .add-box:hover {cursor: pointer;}
		.knowcred .add-box p {font-size: 32px; color:#49853f; text-align:center; margin-top:35px;}
		.knowcred .more-arrow {font-size:15em; float:right; color:#49853f;}
		
		.knowcred .avatar-img-1 {
			width:125px; 
			margin:10px 10px 0; 
			float:left;
		}
		
	</style>
	
	<div class="knowcred">	

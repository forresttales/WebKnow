<!DOCTYPE html>
<html>
    <head>
		<meta charset="utf-8">
  		<title><%= full_title(yield(:title)) %></title>
  		
		<%= favicon_link_tag source='global/knowstory-icon-fav.png' %>
  		<%= include_gon %>
	  	<%= csrf_meta_tags %>
	  	<%= render 'layouts/shim' %>  

		<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => false %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => false %>

		<%= stylesheet_link_tag "nav_publisher" %>
		<!-- <#%= stylesheet_link_tag "publisher_users_index_home" %> -->
		<%= stylesheet_link_tag "slick" %>
		<%= stylesheet_link_tag "slick-theme" %>
		
		<%= stylesheet_link_tag "jqModal-11" %>
		<%= stylesheet_link_tag "ks-profile" %>
		<%= stylesheet_link_tag "jquery.Jcrop.css" %>
		<!-- <link rel="stylesheet" href="../jcrop/css/jquery.Jcrop.css" type="text/css" /> -->
		<!-- <link rel="stylesheet" href="/assets/jquery.qtip.min.css"> -->
		<%= stylesheet_link_tag "publishers_index" %>
		
		<%= javascript_include_tag "jqModal" %>
		<%= javascript_include_tag "jquery.easing.1.3" %>
		<%= javascript_include_tag "jquery.Jcrop" %>
		
		<%= stylesheet_link_tag "jquery.qtip.min" %>
		<%= javascript_include_tag "jquery.qtip.min" %>				
		
		<script type="text/javascript">
		  jQuery(function($){
		    $('#target').Jcrop();
		  });
		</script>

		<style>
		
			#debug {
				background-color: red;
				font-family:Arial, Helvetica, sans-serif;
				font-size: 16px;
				color: #000;
			}

			* {
			  margin: 0;
			}
			html, body {
			  height: 100%;
			}
			.body-wrap {
			  min-height: 100%;
			  margin-bottom: -150px; 
			}
			.body-wrap:after {
			  content: "";
			  display: block;
			}
			.ks-footer, .body-wrap:after {
			  height: 150px; 
			}		

			.body-wrap-inner {
				width: 1200px; 
				height: 100%; 
				margin: 0px auto;
			}
			
		</style>

    </head>
    
	<body style="margin 0; padding: 0;">
		<div class="body-wrap-outer">
			
		<%= render 'layouts/nav_main' %>
		<%= render 'layouts/nav_publisher' %>
		<div class="body-wrap-inner">
			<%= yield %>
		</div>
		
		<%= render 'layouts/footer' %>

		<% if true %>

		<% if Rails.env.development? %>
			<!-- <div style="width: 100%; position: absolute; bottom: -50px;"> -->
				<div id="debug">
					<%= debug(params) %>
				</div>
			<!-- </div> -->
		<% end %>
		
		<% end %>
		
		</div>
	</body>
    
</html>

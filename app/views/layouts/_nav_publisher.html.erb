<script>
	var drop_visible_namespace1 = false;
	function drop_show_namespace1() {
		$("#drop_namespace1 .drop-1-container").removeClass('drop-hidden');
		$("#drop_namespace1 .drop-1-box").fadeIn(1).removeClass("margin-top-hide-1").addClass("margin-top-show-1");
		drop_visible_namespace1 = true;			
	}	
	function drop_hide_namespace1() {
		// $("#drop_namespace1 .drop-1-box").removeClass("margin-top-show-1").addClass("margin-top-hide-1").fadeOut(50);
		$("#drop_namespace1 .drop-1-box").removeClass("margin-top-show-1").addClass("margin-top-hide-1");
		$("#drop_namespace1 .drop-1-container").addClass('drop-hidden');
		drop_visible_namespace1 = false;			
	}	
	function drop_toggle_namespace1() {
		if (drop_visible_namespace1) {
			drop_hide_namespace1();
		}
		else {
			drop_show_namespace1();
		}
	}

	$(document).ready(function () {				

		$(document).on('click', function(e) {
			var target_namespace1 = $(e.target).parents('#drop_namespace1').attr("id");
			if (target_namespace1 == null) {
				drop_hide_namespace1();
			}
		});

		$("#drop_namespace1 .drop-1-target").on('click', function() {
			drop_toggle_namespace1();
		});
		$("#drop_namespace1 .drop-container-links").on("click", function() {
			drop_toggle_namespace1();
		});
	});	
</script>


<!DOCTYPE html>
<html>
    <head>
		<meta charset="utf-8">
  		<title><%= full_title(yield(:title)) %></title>
  		
		<%= favicon_link_tag source='global/knowstory-icon-fav.png' %>
  		<%= include_gon %>
	  	<%= csrf_meta_tags %>
	  	<%= render 'layouts/shim' %>  

		<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => false %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => false %>

		<%= stylesheet_link_tag "nav_publisher" %>
		<%= stylesheet_link_tag "publisher_users_index_home" %>
		<%= stylesheet_link_tag "publisher_users_index" %>
		<%= stylesheet_link_tag "slick" %>
		<%= stylesheet_link_tag "slick-theme" %>
		
		<%= stylesheet_link_tag "jqModal-11" %>
		<%= stylesheet_link_tag "ks-profile" %>
		<%= stylesheet_link_tag "jquery.Jcrop.css" %>
		<!-- <link rel="stylesheet" href="../jcrop/css/jquery.Jcrop.css" type="text/css" /> -->
		<!-- <link rel="stylesheet" href="/assets/jquery.qtip.min.css"> -->
		
		<%= javascript_include_tag "jqModal" %>
		<%= javascript_include_tag "jquery.easing.1.3" %>
		<%= javascript_include_tag "jquery.Jcrop" %>

		<%= stylesheet_link_tag "chosen" %>
		<%= javascript_include_tag "chosen.jquery" %>
		<!-- <script src="../jcrop/js/jquery.Jcrop.js"></script> -->
		
		<script type="text/javascript">
		  jQuery(function($){
		    $('#target').Jcrop();
		  });
		</script>

		<style>
		
			#debug {
				background-color: red;
				font-family:Arial, Helvetica, sans-serif;
				font-size: 16px;
				color: #000;
			}

			* {
			  margin: 0;
			}
			html, body {
			  height: 100%;
			}
			.body-wrap {
			  min-height: 100%;
			  margin-bottom: -152px; 
			}
			.body-wrap:after {
			  content: "";
			  display: block;
			}
			.body-wrap:after {
			  height: 152px; 
			}		

			.body-wrap-inner {
				width: 1200px; 
				height: 100%; 
				margin: 0px auto;
			}
			
			.body-visibility-hidden {
				visibility: hidden;
			}
			
		</style>
		
    </head>

	<!-- <body id="body" class="body-visibility-hidden"> -->
	<body id="body" class="">
		<div class="body-wrap">
			<%= render 'layouts/nav_main' %>
			<%= render 'layouts/nav_publisher' %>
			<div class="body-wrap-inner">
				<%= yield %>
			</div>
		</div>
		
		<%= render 'layouts/footer' %>

		<% if false %>
		<% if Rails.env.development? %>
			<div style="width: 100%; position: absolute; bottom: -50px;">
				<div id="debug">
					<%= debug(params) %>
				</div>
			</div>
		<% end %>
		<% end %>
		
	</body>
</html>
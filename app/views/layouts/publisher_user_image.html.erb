<!DOCTYPE html>
<html>
    <head>
		<meta charset="utf-8">
								    	
  		<title><%= full_title(yield(:title)) %></title> 

		<link rel="icon" type="image/png" href="/assets/knowstory-icon-fav.png" />

   		<%= javascript_include_tag "application" %>		
    	<%= stylesheet_link_tag "application", media: "all" %>
    	
  		<%= include_gon %>
    	
	  	<%= csrf_meta_tags %>
	  	<%= render 'layouts/shim' %>  
		
		<style>
		
			#debug {
				background-color: red;
				font-family:Arial, Helvetica, sans-serif;
				font-size: 16px;
				color: #000;
			}
		
		</style>

		<style type="text/css">
		
			html, body { 
				height: 100%; 
				/*margin: 0 auto; 
				padding: 0;*/ 
			}
			#container {
				height: 100%; 
				margin: 0 auto; 
				padding: 0; 
				width: 1200px;
			}
		
			/*html, body, #container { 
				height: 100%; 
				margin: 0 auto; 
				padding: 0; 
			}*/
			body > #container { 
				height: auto; 
				min-height: 100%; 
			}
			/*#content { 
				padding-bottom: 100px;
			}*/
		
		</style>


    </head>
    
	<body>
		
		<div id="container">
			<%= render 'layouts/nav_main' %>
			<%= yield %>
		</div>		
		
		<%= render 'layouts/footer' %>

		<% if Rails.env.development? %>
			<div id="debug">
				<%= debug(params) %>
			</div>
		<% end %>


		<% if false %>		
		<%= render 'layouts/nav_main' %>
		<%= yield %> 
		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
		<% end %>
		
	</body>
	
</html>

<!DOCTYPE html>
<html>
    <head>
		<meta charset="utf-8">
  		<title><%= full_title(yield(:title)) %></title>
  		
		<%= favicon_link_tag source='global/knowstory-icon-fav.png' %>
  		<%= include_gon %>
	  	<%= csrf_meta_tags %>
	  	<%= render 'layouts/shim' %>  

	    <!-- %script{:src=>'/jquery.js'}
	    %script{:src=>'/jquery-ui-1.8.16.custom.min.js'}
	    %link{:rel=>'stylesheet', :href=>'style.css'}
	    %link{:rel=>'stylesheet', :href=>'/jquery-ui-1.8.16.custom.css'}  -->
	    
		<%= stylesheet_link_tag "/public/assets_stomp/style.css" %>
		<%= javascript_include_tag "/public/assets_stomp/jquery.js" %>
		
		<style>
		
			#debug {
				background-color: red;
				font-family:Arial, Helvetica, sans-serif;
				font-size: 16px;
				color: #000;
			}

			* {
			  margin: 0;
			}
			html, body {
			  height: 100%;
			}
			.body-wrap {
			  min-height: 100%;
			  margin-bottom: -152px; 
			}
			.body-wrap:after {
			  content: "";
			  display: block;
			}
			.body-wrap:after {
			  height: 152px; 
			}		

			.body-wrap-inner {
				width: 1200px; 
				height: 100%; 
				margin: 0px auto;
			}
			
		</style>

    </head>
    
	<body>
		<div class="body-wrap">
			<div class="body-wrap-inner">
				Chat Demo Layout
				<%= yield %>
			</div>
		</div>
		
		<%= render 'layouts/footer' %>

		<% if Rails.env.development? %>
			<div style="width: 100%; position: absolute; bottom: -50px;">
				<div id="debug">
					<%= debug(params) %>
				</div>
			</div>
		<% end %>
		
	</body>
</html>
